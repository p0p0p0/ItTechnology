<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/drawer_layout"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="right"
                                        android:fitsSystemWindows="true"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white"
                  android:orientation="vertical">

        <RelativeLayout
            android:elevation="@dimen/whb_elevation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="back_text_view"
                android:padding="@dimen/content_dp_10"
                android:src="@mipmap/icon_back"/>
            <TextView
                android:id="@+id/text_title"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/goods_soushuo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/messge_img"
                android:layout_toRightOf="@+id/tv_img_back"
                >
                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="25dp"
                    android:background="@drawable/background_yy"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/Login_Edt_PassWord"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/content_dp_10"
                        android:layout_toRightOf="@+id/text_rw"
                        android:layout_weight="1"
                        android:background="@color/whitetow"
                        android:cursorVisible="true"
                        android:imeOptions="actionGo"
                        android:textColor="@color/text_brown"
                        android:textColorHint="#666666"
                        android:textCursorDrawable="@drawable/guanbiao"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/content_dp_10"
                        android:src="@mipmap/icon_search_xm"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/soppingg_sousuo"
                    android:textColor="@color/bg_gray_title"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/messge_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/content_dp_10"
                android:padding="@dimen/content_dp_13"
                android:src="@drawable/icon_cp_search"
                />
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/shanxuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/soppingg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soppingg_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/content_dp_10"
                            android:layout_marginRight="@dimen/content_dp_5"
                            android:layout_marginTop="@dimen/content_dp_10"
                            android:text="默认"
                            android:textColor="@color/jue"
                            android:textSize="@dimen/content_15"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_down"
                            android:textColor="@color/black"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/soppingg_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soppingg_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/content_dp_10"
                            android:layout_marginRight="@dimen/content_dp_5"
                            android:layout_marginTop="@dimen/content_dp_10"
                            android:text="人气"
                            android:textColor="@color/text_brown"
                            android:textSize="@dimen/content_15"/>

                        <ImageView
                            android:id="@+id/soppingg_image_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/doublea"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/soppingg_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soppingg_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/content_dp_10"
                            android:layout_marginRight="@dimen/content_dp_5"
                            android:layout_marginTop="@dimen/content_dp_10"
                            android:text="价格"
                            android:textColor="@color/text_brown"
                            android:textSize="@dimen/content_15"/>

                        <ImageView
                            android:id="@+id/soppingg_image_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/doublea"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/goods_shaixuan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/content_dp_10"
                            android:layout_marginRight="@dimen/content_dp_5"
                            android:layout_marginTop="@dimen/content_dp_10"
                            android:text="筛选"
                            android:textColor="@color/text_brown"
                            android:textSize="@dimen/content_15"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/shaixuana"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            <!--    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"
                    />-->
            </LinearLayout>
        <!--显示没有数据-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/quanbu_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_wu"
                />

            <TextView
                android:text="没有数据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                />
        </LinearLayout>
        <com.safetyhuge.chanlian.safetyhuge.views.SwipeRefreshView
            android:visibility="gone"
            android:id="@+id/sopping_swlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.safetyhuge.chanlian.safetyhuge.baseview.MyListView
                android:id="@+id/bazaar_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none">
            </com.safetyhuge.chanlian.safetyhuge.baseview.MyListView>
        </com.safetyhuge.chanlian.safetyhuge.views.SwipeRefreshView>
    </LinearLayout>
    </FrameLayout>
    <!--侧滑菜单-->
    <FrameLayout
        android:id="@+id/goods_soppingg"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#fff"
        android:orientation="vertical"
        >
        <include
            layout="@layout/activity_goods_shaixuan"
            />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
