<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:elevation="@dimen/whb_elevation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/content_dp_10"
            android:onClick="back_text_view"
            android:src="@mipmap/icon_back"/>

        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/content_dp_10"
            android:paddingTop="@dimen/content_dp_10"
            android:text="我要报价"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="15sp"

                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报  价      "
                />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="match_parent">
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:textSize="15sp"
                        android:id="@+id/issueproject_et_money"
                        android:layout_marginLeft="5dp"
                        android:textColor="#666666"
                        android:background="@null"
                        android:gravity="center|right"
                        android:layout_weight="8.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/jue"
                        android:text="元"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--1111111111111111111111-->
        <!--标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作周期"
                />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:textSize="15sp"
                            android:id="@+id/issueproject_et_title1"
                            android:layout_marginLeft="5dp"
                            android:textColor="#666666"
                            android:background="@null"
                            android:gravity="center|right"
                            android:layout_weight="8.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            />
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/jue"
                            android:text="天"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--1111111111111111111111-->
        <!--地区分类-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择地区"
                />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/issueproject_dq_layout11"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/issueproject_tv_dq_sheng1"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fb_jt"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/issueproject_dq_layout21"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"

                        android:id="@+id/issueproject_tv_dq_shi1"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fb_jt"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--1111111111111111111111-->
        <!--城市选择-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40dp">
            <TextView
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目分类"
                />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/issueproject_dq_layout31"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"

                        android:id="@+id/issueproject_tv_dq_jiedao1"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_weight="9.5"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fb_jt"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--1111111111111111111111-->
        <!--描述-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描  述      "
                />
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                />
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_yy"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:textSize="15sp"
                        android:id="@+id/issueproject_et_describe1"
                        android:layout_marginLeft="5dp"
                        android:textColor="#666666"
                        android:cursorVisible="true"
                        android:gravity="top"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--1111111111111111111111-->
        <LinearLayout
            android:id="@+id/hidden_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="是否隐藏标书?隐藏之后您的标书只有您和项目发布者可见"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/comperttove_cx11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="#666666"
                    />

                <CheckBox
                    android:checked="true"
                    android:id="@+id/comperttove_cx22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="#666666"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f47241"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:visibility="gone"
                android:textSize="15sp"
                android:id="@+id/issueproject_butto_update"
                android:text="上传附件"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:textSize="15sp"

                android:id="@+id/issueproject_button1"
                android:textColor="#ffffff"
                android:text="提交"
                android:background="#f47241"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>