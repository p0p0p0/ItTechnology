<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <LinearLayout
        android:elevation="@dimen/whb_elevation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/content_dp_10"
            android:onClick="back_text_view"
            android:src="@mipmap/icon_back"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/fuwu_soushuo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/messge_img"
            android:layout_toRightOf="@+id/tv_img_back"
            android:background="@drawable/background_yy"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="13sp"
                    android:drawableLeft="@drawable/icon_search_xm"
                    android:text="  点击查询"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_search_xm"
                    />
                <EditText
                    android:focusable="true"
                    android:id="@+id/sousuo_et_text"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:hint="请输入求助/服务关键字"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.safetyhuge.chanlian.safetyhuge.baseview.MyListView
        android:id="@+id/sousuo_listview"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </com.safetyhuge.chanlian.safetyhuge.baseview.MyListView>
</LinearLayout>