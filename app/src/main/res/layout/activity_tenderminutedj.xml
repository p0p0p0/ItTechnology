                        android:id="@+id/tm_name"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tm_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投标者"
                        />
