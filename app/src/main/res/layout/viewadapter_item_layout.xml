<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.safetyhuge.chanlian.safetyhuge.baseview.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/view_item_layout"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="190dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/news_iamge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:id="@+id/view_pager_item_textview"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#88666666"
                    android:gravity="center_vertical|right"
                    android:text="0000000000"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
            <com.safetyhuge.chanlian.safetyhuge.baseview.MyListView
                android:id="@+id/news_listview"
                android:visibility="gone"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.safetyhuge.chanlian.safetyhuge.baseview.MyListView>
        </LinearLayout>
    </com.safetyhuge.chanlian.safetyhuge.baseview.MyScrollview>
</RelativeLayout>