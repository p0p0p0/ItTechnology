<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/quxian"
            >
            <ImageView
                android:onClick="back_text_view"
                android:layout_margin="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button_denglv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f67238"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="13.4sp"/>

            <Button
                android:id="@+id/button_zhuce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:text="注册"
                android:textColor="#999999"
                android:textSize="13.4sp"/>
        </LinearLayout>

        <!--登录界面-->
        <include layout="@layout/layout_denglv"/>
        <!--1111111111-->
        <!--注册界面-->
        <include layout="@layout/layout_zhuce"/>
        <!--1111111111111111-->
    </LinearLayout>
</LinearLayout>
